{
    "name": "lizards-and-pumpkins/lib-key-value-store-memcached",
    "description": "Lizards & Pumpkins Key/Value Store Library For Memcached",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Vinai Kopp",
            "email": "vinai@lizardsandpumpkins.com"
        },
        {
            "name": "Tim Bezhashvyly",
            "email": "tim@lizardsandpumpkins.com"
        },
        {
            "name": "Fabian Blechsmidt",
            "email": "fabian@lizardsandpumpkins.com"
        }
    ],
    "require": {
        "php": "~5.6.0|~7.0",
        "ext-memcached": ">=1.0 <2.2 || >=3.0.0",
        "lizards-and-pumpkins/catalog": "0.4.0-alpha"
    },
    "require-dev": {
        "phpunit/phpunit": "5.3.*",
        "lizards-and-pumpkins/coding-standards": "dev-master"
    },
    "autoload" : {
        "psr-4": { "LizardsAndPumpkins\\DataPool\\KeyValueStore\\Memcached\\": "src/" }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.lizardsandpumpkins.com"
        }
    ],
    "scripts": {
        "test": [
            "vendor/bin/phpunit -c tests/Unit/phpunit.xml.dist",
            "vendor/bin/phpunit -c tests/Integration/phpunit.xml.dist"
        ],
        "sniff": "vendor/bin/phpcs --runtime-set ignore_warnings_on_exit true --runtime-set ignore_errors_on_exit true -p --colors --encoding=utf-8 --standard=vendor/lizards-and-pumpkins/coding-standards/src/LizardsAndPumpkins/ src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
